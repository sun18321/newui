<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NewUITheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#00ff00</item>
        <item name="colorAccent">#0000ff</item>
        <!--<item name="android:textColorPrimary">#ffffff</item>-->
        <item name="android:popupBackground">#000000</item>

    </style>


    <style name="ToolBarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <item name="colorControlNormal">#ffffff</item>

    </style>

    <style name="MenuStyle" parent="Base.Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>

    </style>

    <style name="ToolbarPopup" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#000000</item>

    </style>

</resources>
